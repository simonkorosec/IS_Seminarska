@model Kino.Models.Kolosej

@{
    ViewData["Title"] = "Edit";
}
<br />
<h2>Edit</h2>
<br />
<br />
<h4>Kolosej</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdKolosej" />
            <div class="form-group">
                <label asp-for="IdNaslov" class="control-label"></label>
                <input asp-for="IdNaslov" class="form-control" />
                <span asp-validation-for="IdNaslov" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
