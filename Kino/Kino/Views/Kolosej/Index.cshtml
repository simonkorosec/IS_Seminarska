@model IEnumerable<Kino.Models.Kolosej>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdNaslov)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdNaslov)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @* Chose - kao tega bo izbrov pa tega ureju, dele sam dvorane pokaže odvisn na to kva izbereš *@
                <a asp-action="Chose" asp-route-id="@item.IdKolosej">Chose</a> |
                <a asp-action="Edit" asp-route-id="@item.IdKolosej">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdKolosej">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
