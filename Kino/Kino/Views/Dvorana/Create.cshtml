@model Kino.Models.Wraper.KolosejWrapper

@{
    ViewData["Title"] = "Create Dvorana";
}

<h2>Ustvari</h2>

<h4>Dvorana</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dvorana.IdTehnologije" class="control-label">Ime Tehnologije</label>
                <span asp-validation-for="Dvorana.IdTehnologije" class="text-danger"></span>
                <select asp-for="Dvorana.IdTehnologije" class="selectpicker">
                    @foreach (var tehnologija in Model.TehnologijaList)
                    {
                        <option value="@tehnologija.IdTehnologije">@tehnologija.ImeTehnologije</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Dvorana.Ime" class="control-label"></label>
                <input asp-for="Dvorana.Ime" class="form-control" />
                <span asp-validation-for="Dvorana.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dvorana.StVrst" class="control-label"></label>
                <input asp-for="Dvorana.StVrst" class="form-control" />
                <span asp-validation-for="Dvorana.StVrst" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dvorana.StSedezovNaVrsto" class="control-label"></label>
                <input asp-for="Dvorana.StSedezovNaVrsto" class="form-control" />
                <span asp-validation-for="Dvorana.StSedezovNaVrsto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
