@model IEnumerable<Kino.Models.Wraper.KolosejWrapper>

@{
    ViewData["Title"] = "Kolosej";
}
<br />
<h2>Kolosej</h2>
<br />
<br />
<p>
    <a asp-action="Create">Ustvari nov kolosej</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Naslov
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kolosej.Ime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StringNaslov)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kolosej.Ime)
                    </td>
                    <td>
                        @* Chose - kao tega bo izbrov pa tega ureju, dele sam dvorane pokaže odvisn na to kva izbereš *@
                        <a asp-action="Chose" asp-route-id="@item.Kolosej.IdKolosej">Izberi</a> |
                        <a asp-action="Edit" asp-route-id="@item.Kolosej.IdKolosej">Uredi</a> |
                        <a asp-action="Delete" asp-route-id="@item.Kolosej.IdKolosej">Izbrisi</a>
                    </td>
                </tr>
        }
    </tbody>
</table>