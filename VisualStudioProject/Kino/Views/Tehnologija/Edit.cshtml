@model Kino.Models.Tehnologija

@{
    ViewData["Title"] = "Edit";
}

<h2>Uredi</h2>

<h4>Tehnologija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTehnologije" />
            <div class="form-group">
                <label asp-for="ImeTehnologije" class="control-label"></label>
                <input asp-for="ImeTehnologije" class="form-control" />
                <span asp-validation-for="ImeTehnologije" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
