@model IEnumerable<Kino.Models.ProdukcijskaZalozba>

@{
    ViewData["Title"] = "Založba";
}
<br />
<h2>Založba</h2>
<br />
<br />
<p>
    <a asp-action="Create">Ustvari novo zalozbo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdZalozba">Uredi</a> |
                    <a asp-action="Details" asp-route-id="@item.IdZalozba">Informacije o zalozbi</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdZalozba">Izbrisi</a>
                </td>
            </tr>
        }
    </tbody>
</table>
